<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
        android:key="power_menu_screenrecord_enabled"
        android:title="@string/power_menu_screenrecord_title"
        android:defaultValue="false" />

    <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
        android:key="power_menu_profiles_enabled"
        android:title="@string/power_menu_profiles_title"
        android:defaultValue="true" />

    <com.android.settings.cyanogenmod.SystemSettingCheckBoxPreference
        android:key="power_menu_user_enabled"
        android:title="@string/power_menu_user_title"
        android:defaultValue="false" />

    <PreferenceScreen
        android:fragment="com.android.settings.fusion.PowerMenuStyle"
        android:key="power_menu_style"
        android:title="@string/style_title"
        android:summary="@string/power_menu_style_summary" />

</PreferenceScreen>
